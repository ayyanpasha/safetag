# SafeTag Backend - Environment Variables
# Copy this file to .env and fill in your values

# ─── Core ────────────────────────────────────────
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# ─── Database ────────────────────────────────────
DATABASE_URL=postgresql://safetag:safetag@localhost:5432/safetag
REDIS_URL=redis://localhost:6379

# ─── Security (OWASP A02, A07) ───────────────────
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
# 64 hex characters (32 bytes) for AES-256-GCM encryption
SESSION_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ─── CORS ────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
PUBLIC_URL=http://localhost:8080
PUBLIC_HOST=localhost:8080

# ─── Razorpay (Payment) ─────────────────────────
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxx
RAZORPAY_PLAN_MONTHLY=plan_xxxxxxxxxxxx
RAZORPAY_PLAN_QUARTERLY=plan_xxxxxxxxxxxx
RAZORPAY_PLAN_SEMI_ANNUAL=plan_xxxxxxxxxxxx
RAZORPAY_PLAN_YEARLY=plan_xxxxxxxxxxxx

# ─── WhatsApp Business API ───────────────────────
WHATSAPP_API_URL_SCANNER=https://graph.facebook.com/v17.0/xxxxxxxxx/messages
WHATSAPP_API_URL_OWNER=https://graph.facebook.com/v17.0/xxxxxxxxx/messages
WHATSAPP_TOKEN_SCANNER=your-whatsapp-token
WHATSAPP_TOKEN_OWNER=your-whatsapp-token

# ─── TURN Server (VoIP) ──────────────────────────
TURN_SERVER_URL=turn:turn.yourserver.com:3478
TURN_USERNAME=safetag
TURN_CREDENTIAL=your-turn-credential

# ─── S3/R2 Storage (Incident Photos) ─────────────
S3_BUCKET=safetag-incidents
S3_REGION=ap-south-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
# Optional: For Cloudflare R2 or custom S3-compatible storage
# S3_ENDPOINT=https://xxxxxxxxx.r2.cloudflarestorage.com
# CDN_DOMAIN=cdn.yourdomain.com
